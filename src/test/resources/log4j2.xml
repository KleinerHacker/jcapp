<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%-25.25t] %-5level %-40.40logger - %msg%n"/>
        </Console>

        <File name="File" fileName="jcapp.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-25.25t] %-5level %-40.40logger - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <root level="warn">
            <appender-ref ref="File" level="info"/>
        </root>
    </loggers>
</configuration>